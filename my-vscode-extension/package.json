{
  "name": "my-vscode-extension",
  "displayName": "Productivity Timer",
  "description": "Timer with break reminders",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.takeBreak",
        "title": "FitAI: Take a Break"
      },
      {
        "command": "extension.login",
        "title": "FitAI: Login"
      },
      {
        "command": "extension.logout",
        "title": "FitAI: Logout"
      },
      {
        "command": "extension.configureWorkDuration",
        "title": "FitAI: Configure Work Duration"
      },
      {
        "command": "extension.configureShortBreak",
        "title": "FitAI: Configure Short Break Duration"
      },
      {
        "command": "extension.configureLongBreak",
        "title": "FitAI: Configure Long Break Duration"
      }
    ],
    "configuration": {
      "title": "FitAI Timer",
      "properties": {
        "fitai.timer.workDuration": {
          "type": "number",
          "default": 25,
          "description": "Duration of work periods in minutes"
        },
        "fitai.timer.shortBreakDuration": {
          "type": "number",
          "default": 5,
          "description": "Duration of short breaks in minutes"
        },
        "fitai.timer.longBreakDuration": {
          "type": "number",
          "default": 15,
          "description": "Duration of long breaks (after every 4th pomodoro) in minutes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.98.0",
    "assert": "^2.0.6",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "firebase": "^10.6.0",
    "firebase-admin": "^11.11.0"
  }
}
